%head
	%title= "Manoj Dayaram"
	%link{ :rel => "stylesheet", :type => "text/css", :href => "/styles/main.css" }
%body

	%header
		#h_lb [
		#title Manoj Dayaram
		#h_rb ]

	#about
		#profile
			.img-scroll
				- get_profile_imgs.each do |url|
					%img{ :alt => "joob joob joo, wub wub", :src => "#{url}" }
		#contact
			- get_contacts.each do |name, info|
				%a{ :target => "_top", :href => "#{info[0]}", :onclick => "#{info[2]}" }
					%img{ :alt => "#{name}", :src => "#{info[1]}" }
		#friends_title
			= "FRIENDS"
		#friends
			- get_friends.each do |name, info|
				.friend
					.f_name= name
					%a{ :target => "_top", :href => "#{info[0]}" }
						.img-scroll
							%img{ :alt => "#{name}", :src => "#{info[1]}" }

	.content
		=yield
	%footer
